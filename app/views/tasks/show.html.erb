<div class="container">
  <div class="task-card" style="display: block;">
    <h1><%= @task.title %></h1>
    <p style="color: var(--text-muted);"><%= @task.details %></p>

    <div style="margin-top: 30px; border-top: 1px solid var(--border); padding-top: 20px;">
      <%= link_to "Modifier", edit_task_path(@task), class: "btn btn-primary" %>
      <%= link_to "Retour", tasks_path, class: "btn btn-outline" %>
    </div>
  </div>
</div>
